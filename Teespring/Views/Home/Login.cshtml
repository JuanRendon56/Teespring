            padding: 0px 30px;
        }

        .container {
            font-family: 'Poppins';
            color: #0a0918;
        }

        .form {
            text-align: -moz-center;
        }

        hr {
            margin: 2% 15%;
        }

        legend {
            padding: 2% 0%;
            font-size: 2em;
            font-weight: 600;
            color: #0a0918;
            line-height: 1.5;
        }

        .button {
            padding: 0.4375rem 1.75rem;
            color: whitesmoke;
            background-color: #0a0918;
            height: 45px;
            font-size: 1em;
            max-width: 25rem;
            width: 100%;
            border: 0;
        }
            .button a {
                color: #fff;
                text-decoration: none;
                font-size: 1em;
            }

        label {
            font-weight: bold;
            font-size: 1em;
            line-height: 1;
            margin-top: 5%;
            text-transform: capitalize;
            margin-bottom: 2%;
        }

        input {
            font-size: 1rem;
            width: 100%;
            max-width: 25rem;
            border: 1px solid #d8dae0;
            margin-bottom: 16px;
            padding: 0.6875rem 0.875rem;
            color: #0a0918;
            border-radius: 2px;
            -webkit-transition: border-color .15s, background-color .15s;
            transition: border-color .15s, background-color .15s;
            line-height: normal;
        }


    </style>

</head>

