@model IEnumerable<Teespring.Models.campaign>

@{
    ViewBag.Title = "Index";
}

<style>
    .container {
        font-family: 'Poppins';
        color: #0a0918;
    }

    legend {
        padding: 2% 0%;
        font-size: 2em;
        font-weight: 600;
        color: #0a0918;
        line-height: 1.5;
    }

    .buttonx {
        padding: 0.4375rem 1.75rem;
        color: whitesmoke;
        background-color: #0a0918;
        height: 45px;
        font-size: 1em;
        max-width: 25rem;
        width: 100%;
        border: 0;
    }

        .buttonx a {
            color: #fff;
            text-decoration: none;
            font-size: 1em;
        }

    label {
        font-weight: bold;
        font-size: 1em;
        line-height: 1;
        text-transform: capitalize;
        margin-bottom: 2%;
    }

    input {
        font-size: 1rem;
        width: 100%;
        max-width: 25rem;
        border: 1px solid #d8dae0;
        margin-bottom: 16px;
        padding: 0.6875rem 0.875rem;
        color: #0a0918;
        border-radius: 2px;
        -webkit-transition: border-color .15s, background-color .15s;
        transition: border-color .15s, background-color .15s;
        line-height: normal;
    }
</style>

<legend>Your campaigns</legend>

<table class="table">
    <tr class="tr">
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expiration_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="trs">
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expiration_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.id_campaign }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.id_campaign }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_campaign }) |
            @Html.ActionLink("Share", "Share", new { id=item.id_campaign })
        </td>
    </tr>
}
</table>
