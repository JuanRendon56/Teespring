@model Teespring.Models.campaign

@{
    ViewBag.Title = "Share";
}

<head>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teespring</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        .container {
            font-family: 'Poppins';
            color: #0a0918;
        }

        legend {
            padding: 2% 0%;
            font-size: 2em;
            font-weight: 600;
            color: #0a0918;
            line-height: 1.5;
        }

        .buttonx {
            padding: 0.4375rem 1.75rem;
            color: whitesmoke;
            background-color: #0a0918;
            height: 45px;
            font-size: 1em;
            width: 15%;
            border: 0;
        }

            .buttonx a {
                text-align: center;
                color: #fff;
                text-decoration: none;
                font-size: 1em;
            }

        label {
            font-weight: bold;
            font-size: 1em;
            line-height: 1;
            text-transform: capitalize;
            margin-bottom: 2%;
        }

        input {
            font-size: 1rem;
            width: 100%;
            max-width: 25rem;
            border: 1px solid #d8dae0;
            margin-bottom: 16px;
            padding: 0.6875rem 0.875rem;
            color: #0a0918;
            border-radius: 2px;
            -webkit-transition: border-color .15s, background-color .15s;
            transition: border-color .15s, background-color .15s;
            line-height: normal;
        }
    </style>

</head>

<legend>Share your campaign!</legend>

<div>
    <h4>@Html.DisplayFor(model => model.title) </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.link)
        </dt>

        
        <dd>
            @Html.DisplayFor(model => model.link)
        </dd>
    </dl>

</div>
<p class="buttonx">
    @Html.ActionLink("Back to list", "Index")
</p>
